---
import Layout_LH from "../layouts/Layout-LH.astro";
import Leon_logo from "../assets/Leon_hospitality.svg";
---

<Layout_LH>
  <!-- Navigation -->
  <nav class="bg-[#1b1a1a] shadow-md fixed w-full z-99">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex items-center">
          <a href="#" class="flex-shrink-0 flex items-center">
            <img
              src={Leon_logo.src}
              class="nav_logo"
              width="150"
              height="30"
              alt="OUDS Homepage"
            />
          </a>
        </div>
        <div class="hidden md:flex items-center space-x-8">
          <a
            href="#services"
            class="text-white hover:text-[#bcb19b] px-3 py-2 text-sm font-medium"
            >Services</a
          >
          <a
            href="#about"
            class="text-white hover:text-[#bcb19b] px-3 py-2 text-sm font-medium"
            >About</a
          >
          <a
            href="#testimonials"
            class="text-white hover:text-[#bcb19b] px-3 py-2 text-sm font-medium"
            >Testimonials</a
          >
          <a
            href="#contact"
            class="bg-white text-black px-6 py-2 rounded-md text-sm font-medium hover:bg-[#bcb19b] transition duration-300"
            >Book Consultation</a
          >
        </div>
        <div class="md:hidden flex items-center">
          <button class="text-gray-700 hover:text-[#bcb19b] focus:outline-none">
            <i data-feather="menu"></i>
          </button>
        </div>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <section
    class="relative h-screen flex items-center justify-center bg-cover bg-center"
    style="background-image: url('https://images.unsplash.com/photo-1470337458703-46ad1756a187?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2069&q=80')"
  >
    <div class="absolute inset-0 hero-gradient"></div>
    <div
      class="relative z-10 text-center px-4 sm:px-6 lg:px-8 max-w-4xl mx-auto"
      data-aos="fade-up"
    >
      <h1 class="heading-font text-4xl md:text-6xl font-bold text-white mb-6">
        Elevate Your Bar Experience
      </h1>
      <p class="text-xl text-gray-200 mb-10">
        Premier cocktail consulting and mixologist training for establishments
        that value excellence
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <a
          href="#contact"
          class="bg-white text-black hover:bg-[#bcb19b] px-8 py-4 rounded-md text-lg font-medium transition duration-300"
          >Get a Quote</a
        >
        <a
          href="#services"
          class="bg-transparent hover:bg-[#bcb19b] hover:bg-opacity-20 text-white border border-white px-8 py-4 rounded-md text-lg font-medium transition duration-300"
          >Our Services</a
        >
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section id="services" class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16" data-aos="fade-up">
        <h2 class="heading-font text-3xl md:text-4xl font-bold text-white mb-4">
          Our Premium Services
        </h2>
        <p class="text-white max-w-2xl mx-auto">
          Tailored solutions to transform your bar operations and elevate your
          cocktail program
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Service 1 -->
        <div
          class="bg-white rounded-xl shadow-lg overflow-hidden service-card transition duration-300"
          data-aos="fade-up"
          data-aos-delay="100"
        >
          <div
            class="h-48 bg-cover bg-center"
            style="background-image: url('https://images.unsplash.com/photo-1605270012917-bf157c5a9541?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1169&q=80')"
          >
          </div>
          <div class="p-6">
            <div class="flex items-center mb-4">
              <div class="bg-[#1b1a1a] p-3 rounded-full">
                <i data-feather="coffee" class="text-[#bcb19b]"></i>
              </div>
              <h3 class="heading-font text-xl font-bold ml-4">
                Cocktail Consulting
              </h3>
            </div>
            <p class="text-gray-600 mb-4">
              Custom cocktail menu development tailored to your venue's concept
              and clientele
            </p>
            <ul class="space-y-2 text-gray-600 mb-6">
              <li class="flex items-center">
                <i data-feather="check" class="text-[#bcb19b] mr-2"></i>
                <span>Seasonal menu creation</span>
              </li>
              <li class="flex items-center">
                <i data-feather="check" class="text-[#bcb19b] mr-2"></i>
                <span>Cost analysis & optimization</span>
              </li>
              <li class="flex items-center">
                <i data-feather="check" class="text-[#bcb19b] mr-2"></i>
                <span>Signature cocktail development</span>
              </li>
            </ul>
            <a
              href="#"
              class="text-[#bcb19b] font-medium hover:text-amber-700 flex items-center"
            >
              Learn more <i data-feather="arrow-right" class="ml-2"></i>
            </a>
          </div>
        </div>

        <!-- Service 2 -->
        <div
          class="bg-white rounded-xl shadow-lg overflow-hidden service-card transition duration-300"
          data-aos="fade-up"
          data-aos-delay="200"
        >
          <div
            class="h-48 bg-cover bg-center"
            style="background-image: url('https://images.unsplash.com/photo-1566417713940-fe7c737a9ef2?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1829&q=80')"
          >
          </div>
          <div class="p-6">
            <div class="flex items-center mb-4">
              <div class="bg-[#1b1a1a] p-3 rounded-full">
                <i data-feather="users" class="text-[#bcb19b]"></i>
              </div>
              <h3 class="heading-font text-xl font-bold ml-4">
                Mixologist Training
              </h3>
            </div>
            <p class="text-gray-600 mb-4">
              Comprehensive staff training programs to elevate your team's
              skills and service
            </p>
            <ul class="space-y-2 text-gray-600 mb-6">
              <li class="flex items-center">
                <i data-feather="check" class="text-[#bcb19b] mr-2"></i>
                <span>Technique mastery</span>
              </li>
              <li class="flex items-center">
                <i data-feather="check" class="text-[#bcb19b] mr-2"></i>
                <span>Flavor profiling</span>
              </li>
              <li class="flex items-center">
                <i data-feather="check" class="text-[#bcb19b] mr-2"></i>
                <span>Customer engagement</span>
              </li>
            </ul>
            <a
              href="#"
              class="text-[#bcb19b] font-medium hover:text-amber-700 flex items-center"
            >
              Learn more <i data-feather="arrow-right" class="ml-2"></i>
            </a>
          </div>
        </div>

        <!-- Service 3 -->
        <div
          class="bg-white rounded-xl shadow-lg overflow-hidden service-card transition duration-300"
          data-aos="fade-up"
          data-aos-delay="300"
        >
          <div
            class="h-48 bg-cover bg-center"
            style="background-image: url('https://images.unsplash.com/photo-1574096079513-d8259312b785?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80')"
          >
          </div>
          <div class="p-6">
            <div class="flex items-center mb-4">
              <div class="bg-[#1b1a1a] p-3 rounded-full">
                <i data-feather="bar-chart-2" class="text-[#bcb19b]"></i>
              </div>
              <h3 class="heading-font text-xl font-bold ml-4">
                Bar Management
              </h3>
            </div>
            <p class="text-gray-600 mb-4">
              Strategic consulting to optimize your bar's operations and
              profitability
            </p>
            <ul class="space-y-2 text-gray-600 mb-6">
              <li class="flex items-center">
                <i data-feather="check" class="text-[#bcb19b] mr-2"></i>
                <span>Inventory systems</span>
              </li>
              <li class="flex items-center">
                <i data-feather="check" class="text-[#bcb19b] mr-2"></i>
                <span>Staff scheduling</span>
              </li>
              <li class="flex items-center">
                <i data-feather="check" class="text-[#bcb19b] mr-2"></i>
                <span>Revenue analysis</span>
              </li>
            </ul>
            <a
              href="#"
              class="text-[#bcb19b] font-medium hover:text-amber-700 flex items-center"
            >
              Learn more <i data-feather="arrow-right" class="ml-2"></i>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section id="about" class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div class="relative" data-aos="fade-right">
          <div class="relative z-10 rounded-xl overflow-hidden shadow-xl">
            <img
              src="https://images.unsplash.com/photo-1572116469696-31de0f17cc34?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1974&q=80"
              alt="Leon Hospitality Team"
              class="w-full h-auto"
            />
          </div>
          <div
            class="absolute -bottom-6 -right-6 w-1/2 h-48 bg-amber-100 rounded-xl z-0"
          >
          </div>
        </div>
        <div data-aos="fade-left">
          <h2
            class="heading-font text-3xl md:text-4xl font-bold text-white mb-6"
          >
            About Leon Hospitality
          </h2>
          <!-- <p class="text-white mb-6">
            Founded by industry veterans with decades of combined experience in
            premium hospitality, Leon Hospitality brings unparalleled expertise
            to every project we undertake.
          </p> -->
          <p class="text-white mb-8">
            We are a team of skilled bar operators, passionate mixologists, and
            innovative strategists. With a combined 20 plus years of experience
            in building some of the best bar operations in the nation and
            providing unreasonable hospitality, we bring the best in class to
            your bar to help accomplish your goals.
          </p>
          <div class="flex flex-wrap gap-4">
            <div class="flex items-center">
              <div class="bg-[#bcb19b] text-white p-3 rounded-full mr-3">
                <i data-feather="award"></i>
              </div>
              <span class="font-medium text-white">15+ Years Experience</span>
            </div>
            <div class="flex items-center">
              <div class="bg-[#bcb19b] text-white p-3 rounded-full mr-3">
                <i data-feather="star"></i>
              </div>
              <span class="font-medium text-white">50+ Satisfied Clients</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section id="testimonials" class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16" data-aos="fade-up">
        <h2 class="heading-font text-3xl md:text-4xl font-bold text-white mb-4">
          Client Success Stories
        </h2>
        <p class="text-white max-w-2xl mx-auto">
          Don't just take our word for it - hear what our clients have to say
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Testimonial 1 -->
        <div
          class="bg-gray-50 p-8 rounded-xl"
          data-aos="fade-up"
          data-aos-delay="100"
        >
          <div class="mb-4">
            <div class="text-amber-500 mr-2 flex items-center">
              <i data-feather="star" class="fill-current"></i>
              <i data-feather="star" class="fill-current"></i>
              <i data-feather="star" class="fill-current"></i>
              <i data-feather="star" class="fill-current"></i>
              <i data-feather="star" class="fill-current"></i>
            </div>
          </div>
          <p class="text-gray-600 italic mb-6">
            "Leon Hospitality transformed our cocktail program from ordinary to
            extraordinary. Their menu development increased our beverage revenue
            by 40% in just three months."
          </p>
          <div class="flex items-center">
            <img
              src="http://static.photos/people/200x200/5"
              alt="Client"
              class="w-12 h-12 rounded-full mr-4"
            />
            <div>
              <h4 class="font-bold">Michael R.</h4>
              <p class="text-gray-500 text-sm">Owner, The Velvet Lounge</p>
            </div>
          </div>
        </div>

        <!-- Testimonial 2 -->
        <div
          class="bg-gray-50 p-8 rounded-xl"
          data-aos="fade-up"
          data-aos-delay="200"
        >
          <div class="mb-4">
            <div class="text-amber-500 mr-2 flex items-center">
              <i data-feather="star" class="fill-current"></i>
              <i data-feather="star" class="fill-current"></i>
              <i data-feather="star" class="fill-current"></i>
              <i data-feather="star" class="fill-current"></i>
              <i data-feather="star" class="fill-current"></i>
            </div>
          </div>
          <p class="text-gray-600 italic mb-6">
            "The staff training was exceptional. Our bartenders now create
            cocktails with confidence and flair, and our customer satisfaction
            scores have never been higher."
          </p>
          <div class="flex items-center">
            <img
              src="http://static.photos/people/200x200/6"
              alt="Client"
              class="w-12 h-12 rounded-full mr-4"
            />
            <div>
              <h4 class="font-bold">Sarah L.</h4>
              <p class="text-gray-500 text-sm">
                Beverage Director, Grand Hotel
              </p>
            </div>
          </div>
        </div>

        <!-- Testimonial 3 -->
        <div
          class="bg-gray-50 p-8 rounded-xl"
          data-aos="fade-up"
          data-aos-delay="300"
        >
          <div class="mb-4">
            <div class="text-amber-500 mr-2 flex items-center">
              <i data-feather="star" class="fill-current"></i>
              <i data-feather="star" class="fill-current"></i>
              <i data-feather="star" class="fill-current"></i>
              <i data-feather="star" class="fill-current"></i>
              <i data-feather="star" class="fill-current"></i>
            </div>
          </div>
          <p class="text-gray-600 italic mb-6">
            "Their operational consulting saved us thousands in wasted inventory
            and improved our bar's efficiency. The ROI was immediate and
            substantial."
          </p>
          <div class="flex items-center">
            <img
              src="http://static.photos/people/200x200/7"
              alt="Client"
              class="w-12 h-12 rounded-full mr-4"
            />
            <div>
              <h4 class="font-bold">David T.</h4>
              <p class="text-gray-500 text-sm">GM, Bistro Moderne</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-[#bcb19b]">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div data-aos="fade-up">
        <h2 class="heading-font text-3xl md:text-4xl font-bold text-white mb-6">
          Ready to Transform Your Bar?
        </h2>
        <p class="text-amber-100 text-xl mb-8 max-w-3xl mx-auto">
          Schedule a free 30-minute consultation to discuss how we can help
          elevate your beverage program
        </p>
        <a
          href="#contact"
          class="bg-white text-[#bcb19b] hover:bg-gray-100 px-8 py-4 rounded-md text-lg font-medium transition duration-300 inline-block"
          >Book Your Consultation</a
        >
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <div data-aos="fade-right">
          <h2
            class="heading-font text-3xl md:text-4xl font-bold text-white mb-6"
          >
            Get In Touch
          </h2>
          <p class="text-white mb-8">
            Have questions about our services or ready to get started? Fill out
            the form and we'll get back to you within 24 hours.
          </p>

          <div class="space-y-6">
            <div class="flex items-start align-items-center">
              <div class="bg-amber-100 p-3 rounded-full mr-4">
                <i data-feather="mail" class="text-black"></i>
              </div>
              <div>
                <h4 class="font-bold text-white mb-1">Email Us</h4>
                <a
                  href="mailto:info@leonhospitality.com"
                  class="text-[#bcb19b] hover:text-amber-700"
                  >info@leonhospitality.com</a
                >
              </div>
            </div>

            <div class="flex items-start">
              <div class="bg-amber-100 p-3 rounded-full mr-4">
                <i data-feather="phone" class="text-black"></i>
              </div>
              <div>
                <h4 class="font-bold text-white mb-1">Call Us</h4>
                <a
                  href="tel:+18005551234"
                  class="text-[#bcb19b] hover:text-amber-700">(800) 555-1234</a
                >
              </div>
            </div>

            <div class="flex items-start">
              <div class="bg-amber-100 p-3 rounded-full mr-4">
                <i data-feather="map-pin" class="text-black"></i>
              </div>
              <div>
                <h4 class="font-bold text-white mb-1">Visit Us</h4>
                <p class="text-[#bcb19b]">
                  123 Mixology Lane, Suite 101<br />Beverage City, CA 90210
                </p>
              </div>
            </div>
          </div>
        </div>

        <div data-aos="fade-left">
          <form class="bg-gray-50 p-8 rounded-xl shadow-sm">
            <div class="mb-6">
              <label for="name" class="block text-gray-700 font-medium mb-2"
                >Full Name</label
              >
              <input
                type="text"
                id="name"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 outline-none transition duration-300"
                placeholder="Your name"
              />
            </div>

            <div class="mb-6">
              <label for="email" class="block text-gray-700 font-medium mb-2"
                >Email Address</label
              >
              <input
                type="email"
                id="email"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 outline-none transition duration-300"
                placeholder="your@email.com"
              />
            </div>

            <div class="mb-6">
              <label for="phone" class="block text-gray-700 font-medium mb-2"
                >Phone Number</label
              >
              <input
                type="tel"
                id="phone"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 outline-none transition duration-300"
                placeholder="(123) 456-7890"
              />
            </div>

            <div class="mb-6">
              <label for="service" class="block text-gray-700 font-medium mb-2"
                >Service Interested In</label
              >
              <select
                id="service"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 outline-none transition duration-300"
              >
                <option value="">Select a service</option>
                <option value="consulting">Cocktail Consulting</option>
                <option value="training">Mixologist Training</option>
                <option value="management">Bar Management</option>
                <option value="multiple">Multiple Services</option>
              </select>
            </div>

            <div class="mb-6">
              <label for="message" class="block text-gray-700 font-medium mb-2"
                >Your Message</label
              >
              <textarea
                id="message"
                rows="4"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 outline-none transition duration-300"
                placeholder="Tell us about your project..."></textarea>
            </div>

            <button
              type="submit"
              class="w-full bg-amber-600 hover:bg-amber-700 text-white font-medium py-3 px-6 rounded-lg transition duration-300"
              >Send Message</button
            >
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-[#1b1a1a] text-white py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <div>
          <a href="#" class="flex items-center mb-6">
            <img
              src={Leon_logo.src}
              class="nav_logo"
              width="150"
              height="30"
              alt="OUDS Homepage"
            />
          </a>
          <p class="text-gray-400">
            Premier bar consulting services for establishments that value
            excellence in mixology and hospitality.
          </p>
        </div>

        <div></div>

        <div>
          <h3 class="text-lg font-semibold mb-4">Services</h3>
          <ul class="space-y-2">
            <li>
              <a
                href="#"
                class="text-gray-400 hover:text-amber-500 transition duration-300"
                >Cocktail Consulting</a
              >
            </li>
            <li>
              <a
                href="#"
                class="text-gray-400 hover:text-amber-500 transition duration-300"
                >Mixologist Training</a
              >
            </li>
            <li>
              <a
                href="#"
                class="text-gray-400 hover:text-amber-500 transition duration-300"
                >Bar Management</a
              >
            </li>
            <li>
              <a
                href="#"
                class="text-gray-400 hover:text-amber-500 transition duration-300"
                >Custom Solutions</a
              >
            </li>
          </ul>
        </div>

        <div>
          <h3 class="text-lg font-semibold mb-4">Company</h3>
          <ul class="space-y-2">
            <li>
              <a
                href="#"
                class="text-gray-400 hover:text-amber-500 transition duration-300"
                >About Us</a
              >
            </li>
            <li>
              <a
                href="#"
                class="text-gray-400 hover:text-amber-500 transition duration-300"
                >Our Team</a
              >
            </li>
            <li>
              <a
                href="#"
                class="text-gray-400 hover:text-amber-500 transition duration-300"
                >Case Studies</a
              >
            </li>
            <li>
              <a
                href="#"
                class="text-gray-400 hover:text-amber-500 transition duration-300"
                >Contact</a
              >
            </li>
          </ul>
        </div>

        <!-- <div>
          <h3 class="text-lg font-semibold mb-4">Connect</h3>
          <div class="flex space-x-4 mb-4">
