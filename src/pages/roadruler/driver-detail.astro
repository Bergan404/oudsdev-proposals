---
import Layout_RR from "../../layouts/Layout-RR.astro";
---

<Layout_RR>
  <main class="container mx-auto px-4 py-8">
    <!-- Back button and title -->
    <div class="flex items-center mb-6">
      <a href="/drivers.html" class="mr-4 text-gray-600 hover:text-gray-800">
        <i data-feather="arrow-left"></i>
      </a>
      <h1 class="text-2xl md:text-3xl font-bold text-gray-800">
        Driver Details
      </h1>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Driver Profile Card -->
      <div class="bg-white rounded-xl shadow-sm p-6 h-fit">
        <div class="flex flex-col items-center mb-6">
          <img
            src="http://static.photos/people/200x200/1"
            alt="Driver"
            class="w-24 h-24 rounded-full mb-4"
          />
          <h2 class="text-xl font-bold text-gray-800">Michael Brown</h2>
          <p class="text-gray-500">ID: DRV-0042</p>

          <div class="mt-4 flex space-x-2">
            <span
              class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-xs font-medium"
              >Active</span
            >
            <span
              class="bg-yellow-100 text-yellow-800 px-3 py-1 rounded-full text-xs font-medium"
              >1/3 Write-ups</span
            >
          </div>
        </div>

        <div class="space-y-4">
          <div>
            <h3 class="text-sm font-medium text-gray-500 mb-1">Contact</h3>
            <p class="text-gray-800">michael.brown@example.com</p>
            <p class="text-gray-800">(555) 123-4567</p>
          </div>

          <div>
            <h3 class="text-sm font-medium text-gray-500 mb-1">Employment</h3>
            <p class="text-gray-800">Hired: 03/15/2021</p>
            <p class="text-gray-800">Vehicle: Ford Transit #42</p>
          </div>

          <div>
            <h3 class="text-sm font-medium text-gray-500 mb-1">License</h3>
            <p class="text-gray-800">CDL-A #DL12345678</p>
            <p class="text-gray-800">Expires: 06/30/2025</p>
          </div>
        </div>

        <div class="mt-6 pt-6 border-t border-gray-200 flex flex-col space-y-2">
          <button
            class="w-full flex items-center justify-center px-4 py-2 bg-blue-600 text-white rounded-lg text-sm font-medium"
          >
            <i data-feather="mail" class="w-4 h-4 mr-2"></i>
            Send Message
          </button>
          <button
            class="w-full flex items-center justify-center px-4 py-2 bg-white border border-gray-300 rounded-lg text-sm font-medium"
          >
            <i data-feather="edit" class="w-4 h-4 mr-2"></i>
            Edit Profile
          </button>
          <button
            class="w-full flex items-center justify-center px-4 py-2 bg-white border border-gray-300 rounded-lg text-sm font-medium text-red-600"
          >
            <i data-feather="trash-2" class="w-4 h-4 mr-2"></i>
            Deactivate
          </button>
        </div>
      </div>

      <!-- Incident History -->
      <div class="lg:col-span-2">
        <div class="bg-white rounded-xl shadow-sm p-6 mb-6">
          <div class="flex justify-between items-center mb-6">
            <h2 class="text-xl font-bold text-gray-800">Incident History</h2>
            <button
              class="px-4 py-2 bg-blue-600 text-white rounded-lg text-sm font-medium flex items-center"
            >
              <i data-feather="plus" class="w-4 h-4 mr-2"></i>
              Add Incident
            </button>
          </div>

          <div class="space-y-6">
            <!-- Incident Card -->
            <div class="border border-gray-200 rounded-lg p-4">
              <div class="flex justify-between items-start mb-3">
                <div>
                  <h3 class="font-medium text-gray-800">Speeding Violation</h3>
                  <p class="text-sm text-gray-500">05/10/2023 • Safety</p>
                </div>
                <span
                  class="bg-yellow-100 text-yellow-800 px-2 py-1 rounded-full text-xs font-medium"
                  >Warning</span
                >
              </div>

              <p class="text-gray-700 mb-4">
                Driver was observed exceeding speed limit by 15mph in a school
                zone. Dashcam footage available.
              </p>

              <div class="flex items-center justify-between">
                <div class="flex space-x-2">
                  <span class="text-xs px-2 py-1 bg-gray-100 rounded"
                    >Dashcam #42</span
                  >
                  <span class="text-xs px-2 py-1 bg-gray-100 rounded"
                    >Location: 42.1234, -71.1234</span
                  >
                </div>

                <div class="flex space-x-2">
                  <button
                    class="text-blue-600 hover:text-blue-800 flex items-center text-sm"
                  >
                    <i data-feather="file-text" class="w-3 h-3 mr-1"></i>
                    PDF
                  </button>
                  <button
                    class="text-gray-600 hover:text-gray-800 flex items-center text-sm"
                  >
                    <i data-feather="eye" class="w-3 h-3 mr-1"></i>
                    View
                  </button>
                </div>
              </div>
            </div>

            <!-- Second Incident Card -->
            <div class="border border-gray-200 rounded-lg p-4">
              <div class="flex justify-between items-start mb-3">
                <div>
                  <h3 class="font-medium text-gray-800">Late Delivery</h3>
                  <p class="text-sm text-gray-500">03/22/2023 • Performance</p>
                </div>
                <span
                  class="bg-green-100 text-green-800 px-2 py-1 rounded-full text-xs font-medium"
                  >Resolved</span
                >
              </div>

              <p class="text-gray-700 mb-4">
                Delivery to client #1234 was 2 hours past scheduled window.
                Driver cited traffic congestion.
              </p>

              <div class="flex items-center justify-between">
                <div class="flex space-x-2">
                  <span class="text-xs px-2 py-1 bg-gray-100 rounded"
                    >Client Complaint</span
                  >
                </div>

                <div class="flex space-x-2">
                  <button
                    class="text-blue-600 hover:text-blue-800 flex items-center text-sm"
                  >
                    <i data-feather="file-text" class="w-3 h-3 mr-1"></i>
                    PDF
                  </button>
                  <button
                    class="text-gray-600 hover:text-gray-800 flex items-center text-sm"
                  >
                    <i data-feather="eye" class="w-3 h-3 mr-1"></i>
                    View
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Write-Up Progress -->
        <div class="bg-white rounded-xl shadow-sm p-6">
          <h2 class="text-xl font-bold text-gray-800 mb-4">
            Write-Up Progress
          </h2>

          <div class="space-y-4">
            <div>
              <div class="flex justify-between text-sm mb-1">
                <span>Safety (1/2 threshold)</span>
                <span>50%</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-2">
                <div class="bg-red-600 h-2 rounded-full" style="width: 50%">
                </div>
              </div>
            </div>

            <div>
              <div class="flex justify-between text-sm mb-1">
                <span>Attendance (0/2 threshold)</span>
                <span>0%</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-2">
                <div class="bg-purple-600 h-2 rounded-full" style="width: 0%">
                </div>
              </div>
            </div>

            <div>
              <div class="flex justify-between text-sm mb-1">
                <span>Performance (0/2 threshold)</span>
                <span>0%</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-2">
                <div class="bg-blue-600 h-2 rounded-full" style="width: 0%">
                </div>
              </div>
            </div>
          </div>

          <div class="mt-6 pt-6 border-t border-gray-200">
            <h3 class="font-medium text-gray-800 mb-3">
              Termination Threshold Settings
            </h3>
            <p class="text-sm text-gray-600">
              Current policy: Termination after 2 safety or 3 total write-ups
              within 12 months.
            </p>

            <div class="mt-4 flex items-center">
              <button
                class="px-4 py-2 bg-white border border-gray-300 rounded-lg text-sm font-medium"
              >
                <i data-feather="settings" class="w-4 h-4 mr-2"></i>
                Edit Policy
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout_RR>
