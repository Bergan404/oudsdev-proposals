---
import Layout_RR from "../../layouts/Layout-RR.astro";
---

<Layout_RR>
  <main class="container mx-auto px-4 py-8">
    <div
      class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8"
    >
      <h1 class="text-2xl md:text-3xl font-bold text-gray-800">
        Driver Compliance Dashboard
      </h1>
      <div class="flex space-x-2 mt-4 md:mt-0">
        <button class="px-4 py-2 bg-gray-100 rounded-lg text-sm font-medium">
          <i data-feather="calendar" class="w-4 h-4 mr-2"></i>
          Last 30 Days
        </button>
        <button
          class="px-4 py-2 bg-blue-600 text-white rounded-lg text-sm font-medium"
        >
          <i data-feather="plus" class="w-4 h-4 mr-2"></i>
          New Incident
        </button>
      </div>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="bg-white p-6 rounded-xl shadow-sm">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-gray-500 text-sm font-medium">Total Drivers</p>
            <h3 class="text-2xl font-bold mt-1">47</h3>
          </div>
          <div
            class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center"
          >
            <i data-feather="users" class="text-blue-600"></i>
          </div>
        </div>
      </div>

      <div class="bg-white p-6 rounded-xl shadow-sm">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-gray-500 text-sm font-medium">Active Warnings</p>
            <h3 class="text-2xl font-bold mt-1">9</h3>
          </div>
          <div
            class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center"
          >
            <i data-feather="alert-triangle" class="text-yellow-600"></i>
          </div>
        </div>
      </div>

      <div class="bg-white p-6 rounded-xl shadow-sm">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-gray-500 text-sm font-medium">Critical Issues</p>
            <h3 class="text-2xl font-bold mt-1">3</h3>
          </div>
          <div
            class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center"
          >
            <i data-feather="alert-octagon" class="text-red-600"></i>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Recent Incidents -->
      <div class="lg:col-span-2 bg-white rounded-xl shadow-sm p-6">
        <h2 class="text-xl font-semibold text-gray-800 mb-4">
          Recent Incidents
        </h2>

        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead>
              <tr>
                <th
                  class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                  >Driver</th
                >
                <th
                  class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                  >Type</th
                >
                <th
                  class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                  >Date</th
                >
                <th
                  class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                  >Status</th
                >
                <th
                  class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                  >Actions</th
                >
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <tr>
                <td class="px-4 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <img
                      src="http://static.photos/people/200x200/1"
                      alt=""
                      class="w-8 h-8 rounded-full mr-3"
                    />
                    <div>
                      <div class="font-medium">Michael Brown</div>
                      <div class="text-sm text-gray-500">ID: DRV-0042</div>
                    </div>
                  </div>
                </td>
                <td class="px-4 py-4 whitespace-nowrap">
                  <span
                    class="px-2 py-1 text-xs font-medium rounded-full bg-red-100 text-red-800"
                    >Safety</span
                  >
                </td>
                <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500"
                  >May 15, 2023</td
                >
                <td class="px-4 py-4 whitespace-nowrap">
                  <span
                    class="px-2 py-1 text-xs font-medium rounded-full bg-yellow-100 text-yellow-800"
                    >Warning</span
                  >
                </td>
                <td class="px-4 py-4 whitespace-nowrap text-sm font-medium">
                  <button class="text-blue-600 hover:text-blue-900 mr-3">
                    <i data-feather="eye" class="w-4 h-4"></i>
                  </button>
                  <button class="text-gray-600 hover:text-gray-900">
                    <i data-feather="download" class="w-4 h-4"></i>
                  </button>
                </td>
              </tr>
              <tr>
                <td class="px-4 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <img
                      src="http://static.photos/people/200x200/2"
                      alt=""
                      class="w-8 h-8 rounded-full mr-3"
                    />
                    <div>
                      <div class="font-medium">Sarah Johnson</div>
                      <div class="text-sm text-gray-500">ID: DRV-0037</div>
                    </div>
                  </div>
                </td>
                <td class="px-4 py-4 whitespace-nowrap">
                  <span
                    class="px-2 py-1 text-xs font-medium rounded-full bg-purple-100 text-purple-800"
                    >Attendance</span
                  >
                </td>
                <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500"
                  >May 14, 2023</td
                >
                <td class="px-4 py-4 whitespace-nowrap">
                  <span
                    class="px-2 py-1 text-xs font-medium rounded-full bg-yellow-100 text-yellow-800"
                    >Warning</span
                  >
                </td>
                <td class="px-4 py-4 whitespace-nowrap text-sm font-medium">
                  <button class="text-blue-600 hover:text-blue-900 mr-3">
                    <i data-feather="eye" class="w-4 h-4"></i>
                  </button>
                  <button class="text-gray-600 hover:text-gray-900">
                    <i data-feather="download" class="w-4 h-4"></i>
                  </button>
                </td>
              </tr>
              <tr>
                <td class="px-4 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <img
                      src="http://static.photos/people/200x200/3"
                      alt=""
                      class="w-8 h-8 rounded-full mr-3"
                    />
                    <div>
                      <div class="font-medium">David Wilson</div>
                      <div class="text-sm text-gray-500">ID: DRV-0029</div>
                    </div>
                  </div>
                </td>
                <td class="px-4 py-4 whitespace-nowrap">
                  <span
                    class="px-2 py-1 text-xs font-medium rounded-full bg-blue-100 text-blue-800"
                    >Performance</span
                  >
                </td>
                <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500"
                  >May 12, 2023</td
                >
                <td class="px-4 py-4 whitespace-nowrap">
                  <span
                    class="px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800"
                    >Resolved</span
                  >
                </td>
                <td class="px-4 py-4 whitespace-nowrap text-sm font-medium">
                  <button class="text-blue-600 hover:text-blue-900 mr-3">
                    <i data-feather="eye" class="w-4 h-4"></i>
                  </button>
                  <button class="text-gray-600 hover:text-gray-900">
                    <i data-feather="download" class="w-4 h-4"></i>
                  </button>
                </td>
              </tr>
            </tbody>
          </table>
        </div>

        <div class="mt-4 flex justify-between items-center">
          <div class="text-sm text-gray-500">Showing 1 to 3 of 15 entries</div>
          <div class="flex space-x-2">
            <button class="px-3 py-1 bg-gray-100 rounded text-sm"
              >Previous</button
            >
            <button class="px-3 py-1 bg-blue-600 text-white rounded text-sm"
              >1</button
            >
            <button class="px-3 py-1 bg-gray-100 rounded text-sm">2</button>
            <button class="px-3 py-1 bg-gray-100 rounded text-sm">Next</button>
          </div>
        </div>
      </div>

      <!-- Infraction Types -->
      <div class="bg-white rounded-xl shadow-sm p-6">
        <h2 class="text-xl font-semibold text-gray-800 mb-4">
          Infraction Types
        </h2>

        <div class="space-y-4">
          <div>
            <div class="flex justify-between text-sm mb-1">
              <span>Safety Violations</span>
              <span>42%</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-red-600 h-2 rounded-full" style="width: 42%"></div>
            </div>
          </div>

          <div>
            <div class="flex justify-between text-sm mb-1">
              <span>Attendance Issues</span>
              <span>33%</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-purple-600 h-2 rounded-full" style="width: 33%">
              </div>
            </div>
          </div>

          <div>
            <div class="flex justify-between text-sm mb-1">
              <span>Performance Problems</span>
              <span>25%</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-blue-600 h-2 rounded-full" style="width: 25%">
              </div>
            </div>
          </div>
        </div>

        <div class="mt-8">
          <h3 class="font-medium text-gray-800 mb-3">Repeat Offenders</h3>
          <ul class="space-y-3">
            <li class="flex items-center">
              <img
                src="http://static.photos/people/200x200/4"
                alt=""
                class="w-8 h-8 rounded-full mr-3"
              />
              <div class="flex-1">
                <div class="font-medium">Robert Davis</div>
                <div class="text-xs text-gray-500">5 incidents</div>
              </div>
              <span
                class="bg-red-100 text-red-800 px-2 py-1 rounded-full text-xs font-medium"
                >2/3</span
              >
            </li>
            <li class="flex items-center">
              <img
                src="http://static.photos/people/200x200/5"
                alt=""
                class="w-8 h-8 rounded-full mr-3"
              />
              <div class="flex-1">
                <div class="font-medium">Jennifer Lee</div>
                <div class="text-xs text-gray-500">4 incidents</div>
              </div>
              <span
                class="bg-yellow-100 text-yellow-800 px-2 py-1 rounded-full text-xs font-medium"
                >1/3</span
              >
            </li>
            <li class="flex items-center">
              <img
                src="http://static.photos/people/200x200/6"
                alt=""
                class="w-8 h-8 rounded-full mr-3"
              />
              <div class="flex-1">
                <div class="font-medium">Thomas Smith</div>
                <div class="text-xs text-gray-500">3 incidents</div>
              </div>
              <span
                class="bg-yellow-100 text-yellow-800 px-2 py-1 rounded-full text-xs font-medium"
                >1/3</span
              >
            </li>
          </ul>
        </div>
      </div>
    </div>
  </main>
</Layout_RR>
