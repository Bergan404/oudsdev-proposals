---
import Layout_RR from "../../layouts/Layout-RR.astro";
---

<Layout_RR>
  <main class="container mx-auto px-4 py-8">
    <div
      class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8"
    >
      <h1 class="text-2xl md:text-3xl font-bold text-gray-800">
        Driver Management
      </h1>
      <div class="flex space-x-2 mt-4 md:mt-0">
        <div class="relative">
          <input
            type="text"
            placeholder="Search drivers..."
            class="pl-8 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500"
          />
          <i data-feather="search" class="absolute left-3 top-3 text-gray-400"
          ></i>
        </div>
        <button
          class="px-4 py-2 bg-blue-600 text-white rounded-lg text-sm font-medium flex items-center"
        >
          <i data-feather="plus" class="w-4 h-4 mr-2"></i>
          Add Driver
        </button>
      </div>
    </div>

    <!-- Driver List -->
    <div class="bg-white rounded-xl shadow-sm overflow-hidden">
      <div
        class="grid grid-cols-12 gap-4 p-4 bg-gray-50 border-b border-gray-200"
      >
        <div class="col-span-3 font-medium text-gray-500">Driver</div>
        <div class="col-span-2 font-medium text-gray-500">ID</div>
        <div class="col-span-2 font-medium text-gray-500 text-center">
          Status
        </div>
        <div class="col-span-2 font-medium text-gray-500 text-center">
          Write-Ups
        </div>
        <div class="col-span-3 font-medium text-gray-500 text-right">
          Actions
        </div>
      </div>

      <!-- Driver Row -->
      <div
        class="grid grid-cols-12 gap-4 p-4 border-b border-gray-200 hover:bg-gray-50"
      >
        <div class="col-span-3 flex items-center">
          <img
            src="http://static.photos/people/200x200/1"
            alt="Driver"
            class="w-10 h-10 rounded-full mr-3"
          />
          <span class="font-medium">Michael Brown</span>
        </div>
        <div class="col-span-2 flex items-center text-gray-600">DRV-0042</div>
        <div class="col-span-2 flex items-center justify-center">
          <span
            class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-xs font-medium"
            >Active</span
          >
        </div>
        <div class="col-span-2 flex items-center justify-center">
          <span
            class="bg-yellow-100 text-yellow-800 px-3 py-1 rounded-full text-xs font-medium"
            >1/3</span
          >
        </div>
        <div class="col-span-3 flex items-center justify-end space-x-2">
          <a href="/roadruler/driver-detail">
            <button class="p-2 text-blue-600 hover:bg-blue-50 rounded-lg">
              <i data-feather="eye" class="w-4 h-4"></i>
            </button>
          </a>
          <button class="p-2 text-green-600 hover:bg-green-50 rounded-lg">
            <i data-feather="mail" class="w-4 h-4"></i>
          </button>
          <button class="p-2 text-gray-600 hover:bg-gray-50 rounded-lg">
            <i data-feather="file-text" class="w-4 h-4"></i>
          </button>
          <button class="p-2 text-red-600 hover:bg-red-50 rounded-lg">
            <i data-feather="trash-2" class="w-4 h-4"></i>
          </button>
        </div>
      </div>

      <!-- Repeat for other drivers -->
      <div
        class="grid grid-cols-12 gap-4 p-4 border-b border-gray-200 hover:bg-gray-50"
      >
        <div class="col-span-3 flex items-center">
          <img
            src="http://static.photos/people/200x200/2"
            alt="Driver"
            class="w-10 h-10 rounded-full mr-3"
          />
          <span class="font-medium">Sarah Johnson</span>
        </div>
        <div class="col-span-2 flex items-center text-gray-600">DRV-0037</div>
        <div class="col-span-2 flex items-center justify-center">
          <span
            class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-xs font-medium"
            >Active</span
          >
        </div>
        <div class="col-span-2 flex items-center justify-center">
          <span
            class="bg-red-100 text-red-800 px-3 py-1 rounded-full text-xs font-medium"
            >2/3</span
          >
        </div>
        <div class="col-span-3 flex items-center justify-end space-x-2">
          <button class="p-2 text-blue-600 hover:bg-blue-50 rounded-lg">
            <i data-feather="eye" class="w-4 h-4"></i>
          </button>
          <button class="p-2 text-green-600 hover:bg-green-50 rounded-lg">
            <i data-feather="mail" class="w-4 h-4"></i>
          </button>
          <button class="p-2 text-gray-600 hover:bg-gray-50 rounded-lg">
            <i data-feather="file-text" class="w-4 h-4"></i>
          </button>
          <button class="p-2 text-red-600 hover:bg-red-50 rounded-lg">
            <i data-feather="trash-2" class="w-4 h-4"></i>
          </button>
        </div>
      </div>

      <div
        class="grid grid-cols-12 gap-4 p-4 border-b border-gray-200 hover:bg-gray-50"
      >
        <div class="col-span-3 flex items-center">
          <img
            src="http://static.photos/people/200x200/3"
            alt="Driver"
            class="w-10 h-10 rounded-full mr-3"
          />
          <span class="font-medium">David Wilson</span>
        </div>
        <div class="col-span-2 flex items-center text-gray-600">DRV-0029</div>
        <div class="col-span-2 flex items-center justify-center">
          <span
            class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-xs font-medium"
            >Active</span
          >
        </div>
        <div class="col-span-2 flex items-center justify-center">
          <span
            class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-xs font-medium"
            >0/3</span
          >
        </div>
        <div class="col-span-3 flex items-center justify-end space-x-2">
          <button class="p-2 text-blue-600 hover:bg-blue-50 rounded-lg">
            <i data-feather="eye" class="w-4 h-4"></i>
          </button>
          <button class="p-2 text-green-600 hover:bg-green-50 rounded-lg">
            <i data-feather="mail" class="w-4 h-4"></i>
          </button>
          <button class="p-2 text-gray-600 hover:bg-gray-50 rounded-lg">
            <i data-feather="file-text" class="w-4 h-4"></i>
          </button>
          <button class="p-2 text-red-600 hover:bg-red-50 rounded-lg">
            <i data-feather="trash-2" class="w-4 h-4"></i>
          </button>
        </div>
      </div>

      <div class="p-4 flex justify-between items-center">
        <div class="text-sm text-gray-500">Showing 1 to 3 of 47 drivers</div>
        <div class="flex space-x-2">
          <button class="px-3 py-1 bg-gray-100 rounded text-sm">Previous</button
          >
          <button class="px-3 py-1 bg-blue-600 text-white rounded text-sm"
            >1</button
          >
          <button class="px-3 py-1 bg-gray-100 rounded text-sm">2</button>
          <button class="px-3 py-1 bg-gray-100 rounded text-sm">Next</button>
        </div>
      </div>
    </div>
  </main>
</Layout_RR>
